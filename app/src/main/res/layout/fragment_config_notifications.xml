<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.config.ConfigActivity"
    >
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/config_notification_text_view"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Configure Notifications"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <LinearLayout
        android:id="@+id/config_notifications_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/config_notification_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        >
        
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/config_notification_switch_app_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Update Notifications"
            android:paddingHorizontal="20dp"
            android:textSize="24sp"
            />
        
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/config_notification_switch_db_updates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Database Update Notifications"
            android:paddingHorizontal="20dp"
            android:textSize="24sp"
            />
        
    </LinearLayout>
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/config_notification_confirm_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Start!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginBottom="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>