<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/configSelectThemeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="50dp"
        android:text="Select the theme"
        android:textSize="45sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />
    
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/configSelectThemeDescription"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/configSelectThemeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Please select the theme you would like to apply"
        android:textSize="30sp"
        android:textAlignment="center"
        />
    
    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/configSelectThemeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/configSelectThemeDescription"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="30dp"
        android:checked="true"
        android:text="Dark"
        />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/configSelectThemeContinueButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:text="@string/config_continue"
        android:textSize="20sp"
        android:textColor="@color/light"
        app:layout_constraintTop_toBottomOf="@id/configSelectThemeSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>