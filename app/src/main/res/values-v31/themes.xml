<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="MaterialTheme.Bus2Go" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="editTextColor">@color/dark</item>
        
        <!-- Colors status bar -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- Color status bar font -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Colors navigation bar (i.e. bar with buttons for navigation -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        
        <item name="colorAccent">@color/basic_blue</item>
        <item name="android:windowSplashScreenBackground">@color/light</item>
        <item name="android:windowSplashScreenIconBackgroundColor">@color/light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/bus2go_dark_ic_launcher_foreground</item>
        <item name="fontFamily">@font/goli_regular</item>
    </style>
</resources>